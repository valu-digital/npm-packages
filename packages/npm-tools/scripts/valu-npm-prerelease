#!/bin/sh

set -eu


if [ "${1:-}" != "" ]; then
    cd "packages/$1"
fi

remote=origin

if git config --get remote.public.url &>/dev/null; then
    remote=public
    >&2 echo "Using \"public\" remote ðŸš¨ ($(git config --get remote.public.url))"
    sleep 1
fi

pkg="$(basename $(pwd))"

if [ "$(git rev-parse --show-toplevel)" = "$(pwd)" ]; then
    echo "valu-npm-prerelease must be run from the packge dir"
fi

if [ ! -f package.json ]; then
    echo
    echo "No package.json at $(pwd)"
    echo
    exit 1
fi

if [ "$(jq -r .private package.json)" = "true" ]; then
    echo
    echo "Cannot publish a private package"
    echo
    exit 1
fi


if [ "$(git status . --porcelain)" != "" ]; then
    echo
    echo "Dirty git. Commit changes"
    echo
    exit 1
fi

git push -f ${remote} HEAD:release/$pkg/prerelease